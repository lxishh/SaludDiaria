<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Encuesta">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/responderPreguntas"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/pregunta1"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/respuesta1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:entries="@array/hoyGeneral"
        android:paddingLeft="15dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/pregunta2"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/respuesta2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/fiebre"
        android:paddingLeft="15dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/pregunta3"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/respuesta3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/tosyrespirar"
        android:paddingLeft="15dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/pregunta4"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/respuesta4"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/fatiga"
        android:paddingLeft="15dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/pregunta5"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/respuesta5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:entries="@array/pecho"
        android:paddingLeft="15dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnPreguntas"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="EnviarForm"
        android:text="@string/btnFinalizarEncuesta" />

</LinearLayout>