<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Título para los días de la semana -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Meta Semanal"
        android:textAlignment="center"
        android:textColor="@color/titulosblue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Contenedor para los días de la semana -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvLunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Lunes"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvMartes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Martes"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvMiercoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Miercoles"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvJueves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Jueves"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvViernes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Viernes"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvSabado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sabado"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvDomingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Domingo"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Círculo de progreso -->
    <TextView
        android:id="@+id/DailyWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Daily"
        android:textAlignment="center"
        android:textColor="@color/titulosblue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:progress="0"
        android:max="2000"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_circle"
        android:indeterminate="false"/>

    <!-- Entrada de ml tomados -->
    <TextView
        android:id="@+id/textView45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/PreguntaAgua"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etMlTomados"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/cantidadAgua"
        android:inputType="number"
        android:textAlignment="center" />

    <!-- Botón para actualizar el progreso -->
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnActualizar" />
</LinearLayout>
